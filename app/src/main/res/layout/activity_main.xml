<?xml version="1.0" encoding="utf-8"?>

<!-- portrait -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_height="fill_parent"
  android:layout_width="fill_parent" >

  <Button
    android:id="@+id/buttonChange01"
    android:text="@string/button_change"
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"/>
  
   <TextView
    android:id="@+id/textContent01"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="@string/content_1"/>
  
  <fragment
    android:id="@+id/simpleLabel01"
    android:name="com.digiburo.honeycomb.app.SimpleLabelFragment"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content" />
 
  <FrameLayout 
    android:id="@+id/fragmentContent01"
    android:layout_weight="1"
    android:layout_height="0dip"
    android:layout_width="match_parent" />
</LinearLayout>